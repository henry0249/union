<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.book.dao.AdminSettingMapper">

    <select id="findById" resultType="com.book.model.AdminSetting">
        select `id`,`code`,`value`,`create_time`,`update_time`,`update_admin`,`is_del` from admin_setting
        where id = #{value}
                    and is_del = 0
    </select>

    <select id="findByMap" resultType="com.book.model.AdminSetting">
        select `id`,`code`,`value`,`create_time`,`update_time`,`update_admin`,`is_del` from admin_setting
        <where>
            <if test="id != null and id != ''"> and id = #{id} </if>
            <if test="code != null and code != ''"> and code = #{code} </if>
            <if test="value != null and value != ''"> and value = #{value} </if>
            <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
            <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
            <if test="updateAdmin != null and updateAdmin != ''"> and update_admin = #{updateAdmin} </if>
            <if test="isDel != null and isDel != ''"> and is_del = #{isDel} </if>
            and is_del = 0
        </where>
        order by id desc limit 1
    </select>

    <select id="list" resultType="com.book.model.AdminSetting">
        select `id`,`code`,`value`,`create_time`,`update_time`,`update_admin`,`is_del` from admin_setting
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="code != null and code != ''">and code = #{code}</if>
            <if test="value != null and value != ''">and value = #{value}</if>
            <if test="createTime != null and createTime != ''">and create_time = #{createTime}</if>
            <if test="updateTime != null and updateTime != ''">and update_time = #{updateTime}</if>
            <if test="updateAdmin != null and updateAdmin != ''">and update_admin = #{updateAdmin}</if>
            <if test="isDel != null and isDel != ''">and is_del = #{isDel}</if>
            and is_del = 0
        </where>
        <choose>
            <when test="sortColumn != null and sortColumn.trim() != ''">
                order by ${sortColumn} ${orderBy}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="save" parameterType="com.book.model.AdminSetting" useGeneratedKeys="true" keyProperty="id">
        insert into admin_setting
        (
            <if test="code != null">`code`,</if>
            <if test="value != null">`value`,</if>
            <if test="createTime != null">`create_time`,</if>
            <if test="updateTime != null">`update_time`,</if>
            <if test="updateAdmin != null">`update_admin`,</if>
            `is_del`
        )
        values
        (
            <if test="code != null">#{code},</if>
            <if test="value != null">#{value},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateAdmin != null">#{updateAdmin},</if>
            0
        )
    </insert>

    <update id="update" parameterType="com.book.model.AdminSetting">
        update admin_setting
        <set>
            <if test="code != null">`code` = #{code},</if>
            <if test="value != null">`value` = #{value},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="updateTime != null">`update_time` = #{updateTime},</if>
            <if test="updateAdmin != null">`update_admin` = #{updateAdmin},</if>
            <if test="isDel != null">`is_del` = #{isDel}</if>
        </set>
        where id = #{id} and is_del = 0
    </update>

    <delete id="delete">
        update admin_setting
        <set>
            is_del = 1
        </set>
        where id = #{value}
    </delete>


</mapper>