            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="endTime != null">`end_time` = #{endTime},</if>
            <if test="isDel != null">`is_del` = #{isDel}</if>
        </set>
        where id = #{id} and is_del = 0
    </update>

    <delete id="delete">
        update borrowing_record
        <set>
            is_del = 1
        </set>
        where id = #{value}
    </delete>


</mapper>